{{#let asset=this unselected="hidden" selected="visible" }}
<div
  class="flex flex-col gap-6 lg:absolute {{unselected}}"
  data-unselected-class="{{unselected}}"
  data-selected-class="{{selected}}"
  data-handle="{{asset.file}}"
  >
  <h1 class="font-work text-4xl text-white">{{asset.title}}</h1>

  <!-- Palette -->
  {{#if asset.palette}}
  <div class="flex gap-3">
    {{#each asset.palette as |color|}}
    <div
      class="rounded ring-2 ring-white/30 ring-offset-2 ring-offset-black"
      >
      <div
        class="h-12 w-12 rounded"
        style="background-color: {{color}};"
        ></div>
    </div>
    {{/each}}
  </div>
  {{/if}}

  <!-- Description -->
  <p class="font-open text-sm text-white">{{asset.description}}</p>

  <!-- Video controls -->
  {{#if asset.video}}
  <div class="flex text-grayish gap-2 items-center">
    <button data-handle="{{asset.file}}" class="play-pause ring-1 ring-white/[.2] hover:ring-grayish hover:text-white w-6 h-6 hover:cursor-pointer rounded flex items-center justify-center">
      <i class="fa-solid fa-play text-4"></i>
    </button>
    <button data-handle="{{asset.file}}" class="stop ring-1 ring-white/[.2] hover:ring-grayish hover:text-white w-6 h-6 hover:cursor-pointer rounded flex items-center justify-center">
      <i class="fa-solid fa-stop text-4"></i>
    </button>
    <input data-handle="{{asset.file}}" type="range" value="0" min="0" max="100" class="seek w-3/6 h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer dark:bg-gray-700">
  </div>
  {{/if}}

  <!-- Asset link -->
  {{#if asset.link}}
  <div>
    <a
      href="{{asset.link.url}}"
      target="_blank"
      class="border-b border-dotted text-sm opacity-75 visited:text-grayish hover:opacity-100"
      >
      <i class="fa-solid fa-link text-4"></i>
      <span> {{asset.link.title}} </span>
    </a>
  </div>
  {{/if}}

  <!-- Categories -->
  <div class="">
    <h2 class="mb-4 font-open text-white">Categories</h2>
    <div class="flex gap-3">
      {{#each asset.categories as |cat|}}
      <button
        data-selected-class="filter-tag ring-white opacity-100
        hover:opacity-75 cursor-pointer text-xs inline-flex
        items-center uppercase px-3 py-1 text-white ring-1
        rounded-full"
        data-category="{{ cat }}"
        class="filter-tag inline-flex cursor-pointer items-center rounded-full px-3 py-1 text-xs uppercase text-grayish opacity-75 ring-1 ring-grayish hover:opacity-100"
        >
        {{ cat }}
      </button>
      {{/each}}
    </div>
  </div>
</div>
{{/let}}
